{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "watch": true,
    "target": "es6",
    "lib": ["es6"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*"],
  "exclude": ["views", "static"]
}
